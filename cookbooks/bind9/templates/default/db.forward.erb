$TTL 3D
@       IN      SOA     <%= @zone %>. hostmaster.<%= @zone %>. (
                      200805270         ; Serial
                             8H         ; Refresh
                             2H         ; Retry
                             4W         ; Expire
                             1D )       ; Negative Cache TTL
                NS <%= @node[:hostname] %>
<%- @hosts.each do |name, attributes| -%>
<%= name %> A <%= attributes[:address] %>
<%- attributes[:cnames].each do |cname| -%>
<%= cname %> CNAME <%= name %>
<%- end -%>
<%- end -%>
